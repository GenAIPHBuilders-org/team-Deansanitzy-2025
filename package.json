{
  "name": "kita-kita",
  "version": "1.0.0",
  "description": "Kita-kita - AI Banking Platform with secure chatbot integration",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build:sourcemaps": "sentry-cli sourcemaps inject --org polytechnic-university-of-t-ri --project javascript-react ./ && sentry-cli sourcemaps upload --org polytechnic-university-of-t-ri --project javascript-react ./",
    "setup": "npm install",
    "setup-secure": "node setup-secure-config.js",
    "audit": "npm audit --audit-level=moderate",
    "update-deps": "npm update",
    "security-check": "npm audit fix",
    "security-scan": "node scripts/security-check.js",
    "security-fix": "node scripts/security-check.js --fix",
    "test": "mocha automated-testing-suite.js --timeout 30000",
    "test:watch": "mocha automated-testing-suite.js --watch --timeout 30000",
    "test:coverage": "nyc mocha automated-testing-suite.js --timeout 30000",
    "test:agents": "mocha automated-testing-suite.js --grep 'Agent Autonomy' --timeout 30000",
    "test:production": "mocha automated-testing-suite.js --grep 'Production Readiness' --timeout 30000",
    "test:business": "mocha automated-testing-suite.js --grep 'Business Value' --timeout 30000",
    "test:integration": "mocha automated-testing-suite.js --grep 'Integration' --timeout 30000",
    "lint": "eslint public/js/ public/agents/ --fix",
    "lint:check": "eslint public/js/ public/agents/",
    "docker:build": "docker build -t kita-kita:latest .",
    "docker:run": "docker-compose -f docker-compose.production.yml up -d",
    "docker:stop": "docker-compose -f docker-compose.production.yml down",
    "deploy:staging": "docker-compose -f docker-compose.staging.yml up -d",
    "deploy:production": "docker-compose -f docker-compose.production.yml up -d",
    "monitor": "npm run test:production && npm run lint:check && npm run audit"
  },
  "dependencies": {
    "@google/generative-ai": "^0.21.0",
    "@sentry/cli": "^2.42.4",
    "chart.js": "^4.4.8",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^5.1.0",
    "express-rate-limit": "^7.4.1",
    "firebase": "^11.5.0",
    "helmet": "^8.1.0",
    "multer": "^2.0.0",
    "node-fetch": "^3.3.2",
    "react-plaid-link": "^3.6.1",
    "xss-clean": "^0.1.4"
  },
  "devDependencies": {
    "mocha": "^10.2.0",
    "chai": "^4.3.10",
    "supertest": "^6.3.3",
    "sinon": "^17.0.1",
    "nyc": "^15.1.0",
    "eslint": "^8.55.0"
  },
  "devDependencies": {
    "nodemon": "^3.1.9"
  },
  "engines": {
    "node": ">=20.19.2",
    "npm": ">=10.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/kita-kita.git"
  },
  "keywords": [
    "banking",
    "ai",
    "chatbot",
    "security",
    "express",
    "firebase"
  ],
  "author": "Kita-kita Team",
  "license": "MIT",
  "funding": {
    "type": "opencollective",
    "url": "https://opencollective.com/kita-kita"
  },
  "security": {
    "policy": "https://github.com/your-org/kita-kita/security/policy"
  }
}

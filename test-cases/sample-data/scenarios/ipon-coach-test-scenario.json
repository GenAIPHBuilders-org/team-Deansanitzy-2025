{
  "testCase": "ipon-coach-cultural-awareness",
  "description": "Test Ipon Coach's ability to provide culturally-aware savings advice for Filipino families",
  "agent": "iponCoach",
  "userProfile": "filipino-family-profile",
  "testScenarios": [
    {
      "id": "scenario-1",
      "name": "Christmas Savings Planning",
      "setup": {
        "currentDate": "2024-10-01",
        "userPrompt": "Help me prepare for Christmas expenses this year. I want to make sure I don't overspend like last year.",
        "context": "User has been spending heavily on Christmas in previous years"
      },
      "expectedBehavior": {
        "shouldRecognize": [
          "Filipino Christmas spending patterns",
          "13th month pay availability in December",
          "Traditional Christmas expenses (Noche Buena, gifts, aguinaldo)",
          "Extended family obligations during holidays"
        ],
        "shouldRecommend": [
          "Start saving early for Christmas (Oct-Dec)",
          "Budget allocation for Noche Buena feast",
          "Aguinaldo planning for house help",
          "Gift budget based on family size",
          "Emergency fund protection during holiday spending"
        ],
        "culturalTerms": [
          "Noche Buena",
          "Aguinaldo", 
          "13th month pay",
          "Pamasko"
        ]
      },
      "expectedResponse": {
        "type": "proactive_savings_plan",
        "shouldInclude": [
          "Monthly Christmas savings target from October to December",
          "Breakdown of typical Filipino Christmas expenses",
          "Strategy to use 13th month pay wisely",
          "Tips to reduce Christmas expenses without losing tradition"
        ],
        "budgetBreakdown": {
          "nochebuena": "₱3,000-5,000",
          "gifts": "₱5,000-8,000", 
          "aguinaldo": "₱1,000-2,000",
          "familyGathering": "₱2,000-3,000"
        }
      }
    },
    {
      "id": "scenario-2", 
      "name": "Paluwagan Optimization",
      "setup": {
        "currentDate": "2024-11-15",
        "userPrompt": "I'm thinking of joining another paluwagan group. Is this a good idea?",
        "context": "User already participates in one paluwagan, considering adding another"
      },
      "expectedBehavior": {
        "shouldAnalyze": [
          "Current paluwagan commitment (₱2,000/month)",
          "Cash flow capacity for additional commitment",
          "Risk of multiple paluwagan groups",
          "Alternative investment options"
        ],
        "shouldRecommend": [
          "Assessment of additional paluwagan feasibility",
          "Comparison with formal savings/investment options",
          "Risk mitigation strategies",
          "Timeline optimization based on existing position"
        ]
      },
      "expectedResponse": {
        "type": "comparative_analysis",
        "shouldInclude": [
          "Current paluwagan vs additional paluwagan analysis",
          "Cash flow impact assessment",
          "Alternative savings options comparison",
          "Risk assessment of traditional vs modern savings"
        ]
      }
    },
    {
      "id": "scenario-3",
      "name": "Emergency Fund for Filipino Families",
      "setup": {
        "currentDate": "2024-12-01",
        "userPrompt": "How much should my emergency fund be? I heard different amounts from friends.",
        "context": "User needs guidance on emergency fund sizing for Filipino family context"
      },
      "expectedBehavior": {
        "shouldConsider": [
          "Family size (2 children)",
          "Extended family obligations (₱8,000 monthly padala)",
          "Cultural financial responsibilities",
          "Healthcare costs for aging parents",
          "Economic volatility in Philippines"
        ],
        "shouldCalculate": [
          "Base emergency fund (6-12 months expenses)",
          "Cultural obligation buffer",
          "Healthcare emergency buffer",
          "Income replacement calculation"
        ]
      },
      "expectedResponse": {
        "type": "personalized_calculation",
        "shouldInclude": [
          "Recommended emergency fund amount (₱200,000-300,000)",
          "Breakdown of calculation methodology", 
          "Savings timeline to reach target",
          "High-yield savings account recommendations"
        ],
        "calculation": {
          "monthlyExpenses": "₱35,000-40,000",
          "culturalBuffer": "₱50,000-80,000",
          "totalTarget": "₱270,000-350,000"
        }
      }
    },
    {
      "id": "scenario-4",
      "name": "Padala Optimization",
      "setup": {
        "currentDate": "2024-11-10",
        "userPrompt": "I send money to my parents every month. Can you help me optimize this?",
        "context": "User sends ₱8,000 monthly to parents, wants to optimize without reducing support"
      },
      "expectedBehavior": {
        "shouldAnalyze": [
          "Current remittance method and fees",
          "Frequency optimization opportunities",
          "Bank vs remittance center comparison",
          "Digital payment options"
        ],
        "shouldRecommend": [
          "Bulk transfer vs monthly transfer cost comparison",
          "Best remittance services in Philippines",
          "Setting up parent's bank account for direct transfer",
          "Investment opportunities for parents"
        ]
      },
      "expectedResponse": {
        "type": "optimization_strategy",
        "shouldInclude": [
          "Fee comparison across remittance services",
          "Quarterly vs monthly transfer analysis",
          "Digital payment setup guidance",
          "Parent financial literacy suggestions"
        ]
      }
    }
  ],
  "validationCriteria": {
    "culturalAwareness": {
      "weight": 30,
      "criteria": [
        "Uses Filipino financial terminology correctly",
        "Understands traditional saving methods",
        "Recognizes cultural spending patterns",
        "Acknowledges family obligation dynamics"
      ]
    },
    "technicalAccuracy": {
      "weight": 25,
      "criteria": [
        "Accurate financial calculations",
        "Realistic budget recommendations",
        "Proper risk assessment",
        "Sound investment advice"
      ]
    },
    "personalization": {
      "weight": 25,
      "criteria": [
        "Tailored to user's income level",
        "Considers family size and obligations",
        "Accounts for existing financial commitments",
        "Adapts to user's goals and timeline"
      ]
    },
    "actionability": {
      "weight": 20,
      "criteria": [
        "Provides specific next steps",
        "Includes concrete numbers and timelines",
        "Offers multiple options when appropriate",
        "Links to relevant resources or tools"
      ]
    }
  },
  "performanceTargets": {
    "responseTime": "<3 seconds",
    "culturalTermAccuracy": ">95%",
    "calculationAccuracy": "100%",
    "userSatisfactionScore": ">4.5/5"
  }
} 
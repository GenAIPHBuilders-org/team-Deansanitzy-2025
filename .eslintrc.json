{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": ["warn"],
    "no-undef": ["error"],
    "no-unreachable": ["error"],
    "no-constant-condition": ["error"],
    "eqeqeq": ["warn", "always"],
    "curly": ["warn", "all"],
    "no-eval": ["error"],
    "no-implied-eval": ["error"]
  },
  "globals": {
    "firebase": "readonly",
    "Chart": "readonly"
  },
  "ignorePatterns": [
    "node_modules/",
    "dist/",
    "build/",
    "*.min.js",
    "coverage/"
  ]
} 